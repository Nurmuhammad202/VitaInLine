<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="@drawable/child_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/tavChildCheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="3dp"
        android:src="@drawable/checkbox_background" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/clock_icon" />

    <TextView
        android:id="@+id/tavChildPillTime"
        style="@style/RcChildTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/child_time_text_background"
        android:text="8:00" />


</LinearLayout>