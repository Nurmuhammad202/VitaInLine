<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="@drawable/child_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:paddingVertical="8dp">



    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/clock_icon" />

    <TextView
        android:id="@+id/davChildPillTime"
        style="@style/RcChildTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/child_time_text_background"
        android:text="8:00" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:gravity="end">

        <TextView
            android:id="@+id/davChildPillCount"
            style="@style/RcChildStandardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/child_count_text_background"
            android:text="2ta tabletka" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/davChildDescContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/circled_drop" />

        <TextView
            android:id="@+id/davChildPillDesc"
            style="@style/RcChildStandardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Och qoringa" />
    </LinearLayout>


</LinearLayout>