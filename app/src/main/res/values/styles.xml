<?xml version="1.0" encoding="utf-8"?>
<resources>
    // splash items styles

    <style name="SplashTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

    </style>

    // auth items styles

    <style name="AuthTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="AuthTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/third_text_color</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/edit_text_background</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SecondaryButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/secondary_button_background</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    // error text style

    <style name="ErrorTextStarStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/error_text_star_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    // attention text style

    <style name="AttentionTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/attention_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpinnerItem" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="CalendarTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableStart">@drawable/calendar_month_icon</item>
        <item name="android:drawableEnd">@drawable/navigate_next_icon</item>
        <item name="android:background">@drawable/edit_text_no_active</item>
        <item name="android:text">@string/calendar_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CalendarDialogTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>


    // home fragment

    <style name="HomeUsernameTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="HomeMenuTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DialogAnimationZoom">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="TextBold18" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--dataPiker-->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#ff6d00</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#d50000</item>
    </style>

    <style name="HomeIntroText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/third_text_color</item>

    </style>

    <style name="HomeInfoTextHintStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/third_text_color</item>

    </style>

    <style name="HomeInfoTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="ToolbarTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    // recycler items

    <style name="RcParentTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RcChildTimeText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RcChildStandardText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/third_text_color</item>
        <item name="android:background">@drawable/child_text_unselected</item>
        <item name="android:textStyle">normal</item>
    </style>



    // bottom dialog

    <style name="BottomDialogTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomDialogStandardText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BottomDialogBoldText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomDialogExtraTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down_to_top</item>
        <item name="android:windowExitAnimation">@anim/slide_top_to_down</item>
    </style>


    //pill row

    <style name="PillRowShortDescText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/third_text_color</item>
    </style>


</resources>